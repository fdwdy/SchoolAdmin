@model ItAcademy.SchoolAdmin.Web.Models.PositionViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="h2 mb-2 text-gray-800">Delete position</h2>

<h3>Are you sure you want to delete this position?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>MaxEmployees</dt>
        <dd>@Model.MaxEmployees</dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger btn-user btn-block" />
            </div>
        </div>

        <a href="@Url.Action(MVC.Position.Index())" class="btn btn-light btn-icon-split">
            <span class="icon text-gray-600">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back to List</span>
        </a>
    }
</div>
