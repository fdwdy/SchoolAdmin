@model ItAcademy.SchoolAdmin.Web.Models.EmployeeViewModel

<h2 class="h2 mb-2 text-gray-800">Delete employee</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Full Name</dt>
        <dd>@Model.FullName</dd>
        <dt>Date of Birth</dt>
        <dd>@Model.BirthDate</dd>
        <dt>E-mail</dt>
        <dd>@Model.Email</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger btn-user btn-block" />
            </div>
        </div>

        <a href="@Url.Action(MVC.Employee.Index())" class="btn btn-light btn-icon-split">
            <span class="icon text-gray-600">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back to List</span>
        </a>
    }
</div>
